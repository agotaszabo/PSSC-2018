                <Button Content="Search" HorizontalAlignment="Left" Margin="303,30,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Delete book" HorizontalAlignment="Left" Height="100" Margin="10,231,0,0" VerticalAlignment="Top" Width="374">
            <Grid Margin="0,0,6.8,-0.4">
                <Label Content="Search by: " HorizontalAlignment="Left" Margin="31,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.021,0.333"/>
                <RadioButton Content="Author" HorizontalAlignment="Left" Margin="113,6,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="Title" HorizontalAlignment="Left" Margin="192,6,0,0" VerticalAlignment="Top"/>
